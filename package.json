{
  "name": "maikekai-surf",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "set NODE_OPTIONS=--max-old-space-size=4096 && next dev",
    "build": "set NODE_OPTIONS=--max-old-space-size=4096 && next build",
    "build:memory": "set NODE_OPTIONS=--max-old-space-size=8192 && next build",
    "start": "next start",
    "lint": "next lint",
    "typecheck": "tsc --noEmit",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "test": "vitest",
    "test:ci": "vitest run",
    "test:e2e": "playwright test",
    "prepare": "husky",
    "postbuild": "next-sitemap"
  },
  "dependencies": {
    "@clerk/nextjs": "^6.31.5",
    "@supabase/auth-helpers-nextjs": "^0.10.0",
    "@supabase/ssr": "^0.6.1",
    "@supabase/supabase-js": "^2.55.0",
    "clsx": "^2.1.1",
    "cookies-next": "^6.1.0",
    "dotenv": "^17.2.1",
    "framer-motion": "^10.16.16",
    "lucide-react": "^0.263.1",
    "next": "15.5.0",
    "next-intl": "^3.26.5",
    "next-seo": "^6.8.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "stripe": "^14.25.0",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.41.2",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.56.0",
    "eslint-config-next": "15.5.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.0",
    "next-sitemap": "^4.2.3",
    "postcss": "^8.4.32",
    "prettier": "^3.3.2",
    "tailwindcss": "^3.3.0",
    "typescript": "^5.3.0",
    "vite-tsconfig-paths": "^4.3.2",
    "vitest": "^1.5.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css}": [
      "prettier --write"
    ]
  }
}
